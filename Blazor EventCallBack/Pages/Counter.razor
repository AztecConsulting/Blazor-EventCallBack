@page "/counter"

<PageTitle>Parent</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<ChildPage OnRemoteIncrementCount="RemoteIncrementCount"></ChildPage>

<SecondChild OnRemoteIncrementCount="RemoteIncrementCount"></SecondChild>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    void RemoteIncrementCount()
    {
        //Refresh or do whatever you want here...
        IncrementCount();
    }
}
